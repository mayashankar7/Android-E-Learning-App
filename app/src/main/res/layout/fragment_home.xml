<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Featured_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="serif"
        android:padding="8dp"
        android:text="Featured Courses"
        android:textColor="#E45858"
        android:textSize="30sp" />

    <HorizontalScrollView
        android:id="@+id/courses_collection"
        android:layout_below="@id/Featured_courses"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="#BFE7FA"
                app:cardCornerRadius="8dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="250dp"
                    android:maxHeight="120dp"
                    android:scaleType="center"
                    android:src="@drawable/cplusplusimage" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="#BFE7FA"
                app:cardCornerRadius="8dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="250dp"
                    android:maxHeight="120dp"
                    android:scaleType="center"
                    android:src="@drawable/java_image" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="#BFE7FA"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="250dp"
                    android:maxHeight="120dp"
                    android:scaleType="center"
                    android:src="@drawable/python_image" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#BFE7FA"
                app:cardCornerRadius="8dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="250dp"
                    android:maxHeight="120dp"
                    android:scaleType="center"
                    android:src="@drawable/maths" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#BFE7FA"
                app:cardCornerRadius="8dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="250dp"
                    android:maxHeight="120dp"
                    android:scaleType="center"
                    android:src="@drawable/maths" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#BFE7FA"
                app:cardCornerRadius="8dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="250dp"
                    android:maxHeight="120dp"
                    android:scaleType="center"
                    android:src="@drawable/maths" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#BFE7FA"
                app:cardCornerRadius="8dp">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:text="See More +"
                    android:padding="15dp"
                    android:textAlignment="center"
                    android:textSize="25sp"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </HorizontalScrollView>


</RelativeLayout>